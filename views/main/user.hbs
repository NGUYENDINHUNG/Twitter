<div class="col-md-6 col-md-offset-3">
  <div class="start-template">
    <h2>{{this.foundUser.name}}</h2>
    <img src="{{this.foundUser.photo}}" class="photo-size" />
    <input type="hidden" id="user_id" value="{{this.foundUser._id}}">
    <p>
      <button class="btn btn-default" id="follow">Follow</button>
    </p>
  </div>

  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Tweets</a></li>
    <li><a data-toggle="tab" href="#menu1">Following</a></li>
    <li><a data-toggle="tab" href="#menu2">Follower</a></li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <p>Tổng số tin nhắn: {{tweets.length}}</p>

      {{#each tweets}}
        <div class="media">
          <div class="media-left">
            <a href="#"><img
                src="{{this.owner.photo}}"
                class="media-object"
              /></a>
          </div>
          <div class="media-body">
            <h4 class="media-heading">{{this.owner.name}}</h4>
            <p>{{this.content}}</p>
          </div>
        </div>
      {{/each}}
    </div>

    <div id="menu1" class="tab-pane fade">
      {{#each foundUser.following}}
        <div class="media">
          <div class="media-left">
            <a href="#"><img class="media-object" src="{{this.photo}}" /></a>
          </div>
          <div class="media-body">
            <h4 class="media-heading">{{this.name}}</h4>
          </div>
        </div>
      {{/each}}
    </div>

    <div id="menu2" class="tab-pane fade">
      {{#each foundUser.followers}}
        <div class="media">
          <div class="media-left">
            <a href="#"><img class="media-object" src="{{this.photo}}" /></a>
          </div>
          <div class="media-body">
            <h4 class="media-heading">{{this.name}}</h4>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>